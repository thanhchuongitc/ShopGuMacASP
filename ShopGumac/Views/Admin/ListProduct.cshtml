@model IEnumerable<ShopGumac.Models.ProductModel>
@{
    ViewBag.Title = "ListProduct";
    Layout = "~/Views/Shared/Admin.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">List Product</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                DataTables Advanced Tables
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Tên</th>
                            <th>Kích cỡ</th>
                            <th>Màu</th>
                            <th>Loại</th>
                            <th>Ảnh</th>
                            <th>Xóa/Sửa</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="odd gradeX text-center">
                                <td style="vertical-align: middle;">@item.name</td>
                                <td style="vertical-align: middle;">@foreach(var size in item.size)
                                {
                                    @size
                                }</td>
                                <td style="vertical-align: middle;">@foreach (var color in item.color)
                                {
                                    @color
                                }</td>
                                <td style="vertical-align: middle;" class="center">@item.type</td>
                                <td style="vertical-align: middle;" class="center">
                                    <img width="70" src="~/images/@item.image[0]" /> 
                                </td>
                                <td style="vertical-align: middle;">
                                <a data-toggle="tooltip" data-placement="top" title="Sửa" href=""><i class="fa fa-edit"></i></a>
                                <a data-toggle="tooltip" data-placement="top" title="Xóa" href=""><i class="fa fa-trash"></i></a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<script>
    $(() => {
        $("#dataTables-example").DataTable({
            responsive: true
        })
    })

</script>
